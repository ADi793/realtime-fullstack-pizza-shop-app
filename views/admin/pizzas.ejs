<section class="pizzas-section">
  <h2>All Pizzas</h2>
  <div class="add-wrapper">
    <a href="/pizzas/new">Add New Pizza</a>
  </div>
  <h5><%= messages.error %></h5>
  <div class="menu-cards">
    <% pizzas.forEach(pizza => { %>
    <div class="menu-card">
      <div class="menu-card-icon">
        <img src="../images/<%= pizza.image %>" alt="" />
      </div>
      <h4><%= pizza.name %></h4>
      <span><%= pizza.size %></span>
      <div class="price-cart-wrapper">
        <span class="price">â‚¹ <%= pizza.price %></span>
      </div>
      <div class="edit-delete-wrapper">
        <a href="/pizzas/<%= pizza._id %>/edit">Edit</a>
        <form method="POST" action="/pizzas/<%= pizza._id %>?_method=DELETE">
          <button class="pizza-delete-btn">Delete</button>
        </form>
      </div>
    </div>
    <% }) %>
  </div>
</section>
